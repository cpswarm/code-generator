<?xml version="1.0"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0"
	name="HeirarchyExample" initial="X">

	<state id="X">

		<state initial="OffSpring/B" id="OffSpring">
			<state id="OffSpring/A">
				<invoke id="TASK[Loop]" />
				<transition event="/Close" target="OffSpring/B" />
				<transition event="/Loop" target="OffSpring/A" />
			</state>

			<state id="OffSpring/B">
				<invoke id="TASK[Close]" />
			</state>
		</state>

		<transition event="/B" target="Y" />
	</state>

	<state id="Y">
		<state initial="A" id="OffSpring2">
			<state id="A">
				<invoke id="TASK[Loop]" />
				<transition event="/Close" target="B" />
				<transition event="/Loop" target="A" />
			</state>

			<state id="B">
				<invoke id="TASK[Close]" />
			</state>
		</state>
	</state>

</scxml>